<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:text="For best accuracy, it is important to provide multiple images for each user. This can be done by using the same name and clicking 'Register a Face'.\nAdditionally, please note that the app is not 100% accurate and may not provide high accuracy for a very large amount of users."
            android:layout_centerHorizontal="true"
            android:textColor="#a40101"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textAlignment="center"
            android:textSize="22dp" />

        <ImageView
            android:layout_width="400dp"
            android:layout_height="500dp"
            android:layout_above="@+id/name"
            android:layout_centerInParent="true"
            android:layout_marginBottom="15dp"
            android:id = "@+id/imageView"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id = "@+id/name"
            android:inputType="textCapWords"
            android:ems = "15"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            android:layout_above="@id/recognize"
            android:layout_marginBottom="15dp"
            android:textSize="16dp"
            android:hint="Enter Your Name Here"
            />

        <Button
            android:id="@+id/read"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:text="Read Data"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="22dp" />

        <Button
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/read"
            android:text="Register A Face"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="22dp" />

        <Button
            android:id="@+id/recognize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/register"
            android:text="Recognize A Face"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="22dp" />


    </RelativeLayout>


</RelativeLayout>